    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'stranger-api-server'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=stranger-api-server",
                    "--package=stranger-api-server"
                ],
                "filter": {
                    "name": "stranger-api-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'stranger-api-server'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=stranger-api-server",
                    "--package=stranger-api-server"
                ],
                "filter": {
                    "name": "stranger-api-server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'stranger_jail'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=stranger-jail"
                ],
                "filter": {
                    "name": "stranger_jail",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}